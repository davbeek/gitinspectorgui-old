    "version": "0.2.0",
    "configurations": [
        {
            "name": "gigui module",
            "type": "debugpy",
            "request": "launch",
            "module": "gigui",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            // "cwd": "${userHome}/1-repos/templates/1dh",
            "args": [
                "-r",
            ],
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "justMyCode": false,
            "console": "integratedTerminal",
        },
    ]
}
